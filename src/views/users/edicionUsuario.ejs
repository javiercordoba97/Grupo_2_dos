<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head") %> 

<body>

    <%- include("../partials/header") %> 

    <main>
        <div class="login-container">
            <h1>EDITA TU PERFIL</h1>
            <img class="imagenUsuario" src="/img/users/<%= usuario.img %>" alt="">
            <form action="/edicion/<%=usuario.id%>?_method=put" method="post" enctype="multipart/form-data">
                <div class="form-group">

                    <label for="userImage">Imagen de perfil</label>
                    <input value=<%=usuario.img%> type="file" id="userImage" name="userImage" accept="image/*">

                    <label for="name">Nombre</label>
                    <input value=<%=usuario.nombre%> type="text" id="name" name="name" required>

                    <label for="last_name">Apellido</label>
                    <input value=<%=usuario.apellido%> type="text" id="last_name" name="last_name" required>
                                              
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="password" required>
                
                    <label for="confirm-password">Repetir Contraseña</label>
                    <input type="password" id="confirm-password" name="confirm-password" required>

                    <label for="dni">DNI</label>
                    <input value=<%=usuario.dni%> type="number" id="dni" name="dni" required>

                    <label for="tel">Teléfono</label>
                    <input value=<%=usuario.telefono%>type="number" id="tel" name="tel" required>

                    <label for="address">Dirección</label>
                    <input value=<%=usuario.direccion%> type="text" id="address" name="address" required>
                
                    <label for="email">Correo Electronico</label>
                    <input value=<%=usuario.email%> type="Email" id="email" name="email" required>
                </div>
                
                <button type="submit">Editar</button>
            </form>
            <form action="/edicionUsuario/<%=usuario.id%>?_method=Delete" method="post">
                <button class="delete" type="submit">Delete</button>
              </form>
        </div>
    </main>

    <%- include("../partials/footer") %>

</body>